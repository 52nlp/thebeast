#!/bin/bash

WORKING_DIR=models
TEMPLATE_DIR=../template
ITERS=5
TYPES="../data/train/train.open.types.pml"
ATOMS="../data/train/train.open.atoms"
ATOMS_TEST="../data/devel/devel.open.atoms"
ATOMS_TESTS="../data/devel/devel.open.atoms"
ATOMS_RES="../results/devel.open"
MODEL="model1.pml"
MODELS="results/model.mst"
INSTANCES="/disk/home/dendrite/s0349492/ivan/emnlp.dmp"
WEIGHTS="/disk/home/dendrite/s0349492/ivan/emnlp.weights"
TEMPLATE_INI="init.pml"
TEMPLATE_LEARN="learn.pml"
TEMPLATE_TEST="test.pml"
MODE=3

if [ $# -gt 0 ]
then
    MODE=$1
fi

if [ $# -gt 1 ]
then
    ITERS=$2
fi

if [ $# -gt 2 ]
then
    ID=$3
fi


if [ $# -gt 3 ]
then
    echo -n $USAGE
    exit 1;
fi

set -x
scripts/run_train_test2 $WORKING_DIR $TEMPLATE_DIR $ITERS $TYPES $ATOMS\
        $ATOMS_TEST $ATOMS_RES $MODEL $MODELS $INSTANCES $WEIGHTS $TEMPLATE_INI\
        $TEMPLATE_LEARN $TEMPLATE_TEST $MODE ${ATOMS_TESTS} $ID

